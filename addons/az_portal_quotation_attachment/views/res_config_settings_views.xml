<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="azk_purchase_attachment_config_settings_view_form" model="ir.ui.view">
        <field name="name">azk_purchase_attachment_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@data-key='sale_management']" position="inside">
        		<h2>Portal Quotation Attachment Warning</h2>
				<div class="row mt16 o_settings_container"  id="product_increase_restriction">
					<div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="portal_sale_attachemnt_warning"/>
                            <field name="portal_sale_attachemnt_warning"/>
                        </div>
                    </div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>