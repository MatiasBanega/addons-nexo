<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="azk_vendor_portal_attachment_config_settings_view_form" model="ir.ui.view">
        <field name="name">azk_vendor_portal_attachment_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@data-key='purchase']" position="inside">
        		<h2>Vendor Portal</h2>
				<div class="row mt16 o_settings_container"  id="rfq_submition_restriction">
					<div class="col-xs-12 col-md-6 o_setting_box">
							<div class="o_setting_left_pane">
                                <field name="restrict_rfq_sub_after_sub_date"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="restrict_rfq_sub_after_sub_date"/>
                                
                            </div>
                    </div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>