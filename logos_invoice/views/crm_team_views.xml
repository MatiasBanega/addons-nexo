<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="crm_team_salesteams_view_form_logo" model="ir.ui.view">
            <field name="name">crm.team.form_logo</field>
            <field name="model">crm.team</field>
            <field name="priority">9</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options_active']" position="inside">
                    <group class="o_row" style="display:inherit">
                        <field name="logo" string="Logo para los documentos:" widget="image" class="oe_left oe_avatar"
                               options="{'image_preview': 'image_128'}"/>

                        <field name="country_id" string="PaÃ­s" options="{'no_open': True,'no_create': True}"/>
                        <field name="state_id" string="Estado / Provincia"
                               options="{'no_open': True, 'no_quick_create': True}"
                               context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                        <field name="city" string="Ciudad"/>
                        <field name="street" string="Calle"/>
                        <field name="zip" string="Cod Postal"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
