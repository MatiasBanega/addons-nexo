<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="name">account.journal.form</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">

            <field name="company_id" position="after">
                <field name="logo" string="Logo para los documentos asociados a este diario:" widget="image" class="oe_avatar" options="{'image_preview': 'image_128'}"/>

                <field name="country_id" string="PaÃ­s" options="{'no_open': True,'no_create': True}"/>
                <field name="state_id" string="Estado / Provincia"
                       options="{'no_open': True, 'no_quick_create': True}"
                       context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                <field name="city" string="Ciudad"/>
                <field name="street" string="Calle"/>
                <field name="zip" string="Cod Postal"/>
            </field>

        </field>
    </record>

</odoo>
