        <template id="external_layout_header_invoice_logo" inherit_id="web.external_layout_bold">
        <xpath expr="//div[1]" position="replace">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="o_clean_header">
                    <div class="row">
                        <div class="col-6">
                            <img t-if="o.journal_id.logo" t-att-src="image_data_uri(o.journal_id.logo)" style="max-height: 45px;" alt="Logo"/>
                        </div>
                        <div class="col-5 offset-1" name="company_address">
                            <ul class="list-unstyled">
                                <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                                <li t-if="forced_vat or company.vat">
                                    <t t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                                    <span t-if="forced_vat" t-esc="forced_vat"/>
                                    <span t-else="" t-field="company.vat"/>
                                </li>
                                <li t-if="company.phone">Tel: <span class="o_force_ltr" t-field="company.phone"/></li>
                                <li t-if="company.email"><span t-field="company.email"/></li>
                                <li t-if="company.website"><span t-field="company.website"/></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

    </template>


</odoo>